<% layout("layoutss/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3>Details:</h3>
            </div>
            <div class="card col-7 offset-2">
                <img src="<%= item.image.url%>" alt="none" class="card-image-top show-image">

                <div class="card-body">
                    <p class="card-text">
                        <b>Created by:<%= item.owner.username %></b>
                        <br>
                        <b>Title: <%= item.title %></b>
                        <br>
                        <b>Description: </b>
                        <%= item.description %>
                            <br>
                            <b>Price: &#8377;</b>
                            <%= item.price.toLocaleString("en-IN") %>/night
                                <br>
                                <b>Location: </b>
                                <%= item.location %>
                                    <br>
                                    <b>Country: </b>
                                    <%= item.country %>
                    </p>
                </div>
            </div>
        </div>
        <div class="buttons">
            <div class="col-4">
                <a href="/listings/edit/<%= item.id %>" class="btn btn-dark
                    col-3 mt-3 offset-6">Edit</a>
            </div>
            <div class="col-5">
                <form action="/listings/delete/<%= item.id %>?_method=delete" method="post">
                    <button class="btn btn-dark mt-3 col-3">Delete</button>
                </form>
            </div>
        </div>
        <hr class="col-7 offset-2">
        <div class="mt-3 col-7 offset-2">
            <form action="/listings/<%= item.id %>/review/add" method="post" novalidate class="needs-validation">
                <div>
                    <label for="rating">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
                </div>
                <div class="mt-1">
                    <label for="comment" class="form-label">Comments</label>
                    <textarea name="review[comment]" id="comment" cols="30" rows="10" class="form-control"
                        required></textarea>
                    <div class="valid-feedback">Looks Good</div>
                    <div class="invalid-feedback">Comment is Required</div>
                </div>
                <button class="btn btn-dark mt-3 ms-1">Submit</button>
            </form>
        </div>
        <hr class="col-7 offset-2">
        <div class="offset-2">
            <h4><b>All Reviews</b></h4>
            <div class="row col-9">
                <% for( review of item.reviews) { %>
                    <div class="card col-3 mb-3 ms-3">
                        <div class="card-body">
                            <div class="card-title">Rohit chowdhury</div>
                            <div class="card-text">
                                <%= review.comment %>
                            </div>
                            <div class="card-text">
                                <%= review.rating %>Stars
                            </div>
                        </div>
                        <form action="/listings/<%= item.id %>/review/<%= review.id %>?_method=Delete" method="post">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>
    </body>